    <main
      class="container my-5"
      style="
        padding-top: 100px;
        padding-bottom: 100px;
        animation: fadeSlide 1.2s ease-out;
      "
    >
      <div class="row">
        <div class="col-12">
          <h3 class="mb-2" style="font-weight: 400; color: #67161c">
            <i class="fa-regular fa-id-card fa-fade" style="color: #67161c"></i>
            Membership Registration
          </h3>
          <p class="lead fs-6">
            Choose Online Form for digital submission & payment. Use Offline
            Form if you want to submit physical documents / DD.
          </p>

          <!-- Bootstrap tabs -->
          <ul class="nav nav-tabs" id="membershipTabs" role="tablist">
            <li class="nav-item" role="presentation">
              <button
                class="nav-link active"
                id="online-tab"
                data-bs-toggle="tab"
                data-bs-target="#online"
                type="button"
                role="tab"
              >
                Online Membership
              </button>
            </li>
            <li class="nav-item" role="presentation">
              <button
                class="nav-link"
                id="offline-tab"
                data-bs-toggle="tab"
                data-bs-target="#offline"
                type="button"
                role="tab"
              >
                Offline Membership
              </button>
            </li>
          </ul>

          <div class="tab-content border p-4" id="membershipTabsContent">
            <!-- ONLINE FORM -->
            <div class="tab-pane fade show active" id="online" role="tabpanel">
              <form
                id="onlineForm"
                action="/membership/online"
                method="POST"
                enctype="multipart/form-data"
              >
                <div class="row">
                  <div class="col-md-6 mb-3">
                    <h5>Membership Type</h5>
                    <div class="form-check">
                      <input
                        class="form-check-input"
                        type="radio"
                        name="mem-type"
                        id="mem-type-indian"
                        checked
                      />
                      <label class="form-check-label" for="indian">
                        Indian
                      </label>
                    </div>
                    <div class="form-check">
                      <input
                        class="form-check-input"
                        type="radio"
                        name="mem-type"
                        id="mem-type-international"
                      />
                      <label class="form-check-label" for="international">
                        International
                      </label>
                    </div>
                  </div>

                  <div>
                    <div class="col-md-3 mb-3">
                      <label class="form-label">Title</label>
                      <select name="gender" class="form-select">
                        <option value="">Select</option>
                        <option>Dr.</option>
                        <option>Mr.</option>
                        <option>Mrs.</option>
                        <option>Ms.</option>
                        <option>Prof.</option>
                      </select>
                    </div>
                  </div>
                  <div class="col-md-6 mb-3">
                    <label class="form-label"
                      >Full Name <span class="text-danger">*</span></label
                    >
                    <input
                      type="text"
                      name="name"
                      class="form-control"
                      required
                    />
                  </div>

                  <div class="col-md-3 mb-3">
                    <label class="form-label">Gender</label>
                    <select name="gender" class="form-select">
                      <option value="">Select</option>
                      <option>Male</option>
                      <option>Female</option>
                      <option>Other</option>
                    </select>
                  </div>

                  <div class="col-md-3 mb-3">
                    <label class="form-label">Date of Birth</label>
                    <input type="date" name="dob" class="form-control" />
                  </div>

                  <div class="col-md-6 mb-3">
                    <label class="form-label"
                      >Email <span class="text-danger">*</span></label
                    >
                    <input
                      type="email"
                      name="email"
                      class="form-control"
                      required
                    />
                  </div>

                  <div class="col-md-6 mb-3">
                    <label class="form-label"
                      >Phone <span class="text-danger">*</span></label
                    >
                    <input
                      type="tel"
                      name="phone"
                      class="form-control"
                      required
                    />
                  </div>

                  <div class="col-md-6 mb-3">
                    <label class="form-label">Qualification</label>
                    <input
                      type="text"
                      name="qualification"
                      class="form-control"
                    />
                  </div>

                  <div class="col-md-6 mb-3">
                    <label class="form-label">Designation / Role</label>
                    <input
                      type="text"
                      name="designation"
                      class="form-control"
                    />
                  </div>

                  <div class="col-md-6 mb-3">
                    <label class="form-label">PAN Number</label>
                    <input
                      type="number"
                      name="designation"
                      class="form-control"
                    />
                  </div>

                  <div class="col-md-12 mb-3">
                    <label class="form-label">Institution / Organization</label>
                    <input
                      type="text"
                      name="institution"
                      class="form-control"
                    />
                  </div>

                  <div class="col-md-12 mb-3">
                    <label class="form-label">Postal Address</label>
                    <textarea
                      name="address"
                      rows="2"
                      class="form-control"
                    ></textarea>
                  </div>

                  <div class="col-md-6 mb-3">
                    <label class="form-label">Membership Category</label>
                    <select name="category" class="form-select">
                      <option value="">Select</option>
                      <option>Student</option>
                      <option>Fellow</option>
                      <option>Life Member</option>
                      <option>Associate</option>
                    </select>
                  </div>

                  <div class="col-md-6 mb-3">
                    <label class="form-label">Mode of Payment</label>
                    <select
                      name="payment_mode"
                      class="form-select"
                      id="paymentMode"
                    >
                      <option value="">Select</option>
                      <option value="online">Online (Card/UPI)</option>
                      <option value="bank">Bank Transfer</option>
                    </select>
                  </div>

                  <div
                    id="paymentDetails"
                    class="col-12 mb-3"
                    style="display: none"
                  >
                    <!-- displayed when bank selected -->
                    <div class="alert alert-info p-2">
                      <strong>Bank transfer details:</strong>
                      <div>
                        Account Name: Indian Institute of Ocular Oncology
                      </div>
                      <div>Account No: 1234567890</div>
                      <div>IFSC: ABCD0000123</div>
                    </div>
                  </div>

                  <div class="col-md-6 mb-3">
                    <label class="form-label"
                      >Upload Photo (passport size)</label
                    >
                    <input
                      type="file"
                      accept="image/*"
                      name="photo"
                      class="form-control"
                      id="photoInput"
                    />
                    <small class="text-muted">Max 2MB. JPG/PNG.</small>
                  </div>

                  <div class="col-md-6 mb-3">
                    <label class="form-label"
                      >Upload Certificate / ID (optional)</label
                    >
                    <input
                      type="file"
                      name="certificate"
                      class="form-control"
                      id="certInput"
                    />
                  </div>

                  <div class="col-12 mb-3">
                    <div class="form-check">
                      <input
                        class="form-check-input"
                        type="checkbox"
                        id="declaration"
                        name="declaration"
                        required
                      />
                      <label class="form-check-label" for="declaration">
                        I declare that the information provided is true to the
                        best of my knowledge.
                      </label>
                    </div>
                  </div>

                  <div class="col-12 d-flex justify-content-end">
                    <button
                      type="submit"
                      class="btn btn"
                      style="background-color: #67161c; color: #ffff"
                    >
                      <i
                        class="fa-regular fa-id-card fa-fade"
                        style="color: #ffff"
                      ></i>
                      Submit Online
                    </button>
                  </div>
                </div>
              </form>
            </div>

            <!-- OFFLINE FORM -->
            <div class="tab-pane fade" id="offline" role="tabpanel">
              <form
                id="offlineForm"
                action="/membership/offline"
                method="POST"
                enctype="multipart/form-data"
              >
                <div class="row">
                  <!-- reuse many fields, can be simplified -->
                  <div class="col-md-6 mb-3">
                    <label class="form-label"
                      >Full Name <span class="text-danger">*</span></label
                    >
                    <input
                      type="text"
                      name="name"
                      class="form-control"
                      required
                    />
                  </div>
                  <div class="col-md-6 mb-3">
                    <label class="form-label">Email</label>
                    <input type="email" name="email" class="form-control" />
                  </div>

                  <div class="col-md-12 mb-3">
                    <label class="form-label"
                      >Postal Address (for communication)</label
                    >
                    <textarea
                      name="address"
                      rows="2"
                      class="form-control"
                    ></textarea>
                  </div>

                  <div class="col-md-6 mb-3">
                    <label class="form-label"
                      >DD / Cheque Number (if applicable)</label
                    >
                    <input type="text" name="cheque_no" class="form-control" />
                  </div>

                  <div class="col-md-6 mb-3">
                    <label class="form-label"
                      >Attach scanned copy of DD / Payment proof</label
                    >
                    <input
                      type="file"
                      name="payment_proof"
                      class="form-control"
                    />
                  </div>

                  <div class="col-12 mb-3">
                    <div class="alert alert-warning">
                      After completing offline form, please send the physical
                      documents / DD to:<br />
                      <strong
                        >Indian Institute of Ocular Oncology, 1 Main Street,
                        City, PIN</strong
                      >
                    </div>
                  </div>

                  <div class="col-12 d-flex justify-content-end">
                    <button type="submit" class="btn btn-secondary">
                      Submit Offline
                    </button>
                  </div>
                </div>
              </form>
            </div>
          </div>
          <!-- end tab-content -->
        </div>
      </div>
